function checkSpeed(speed) {
    const speedLimit = 70;
    const kmPerDemeritPoint = 5;
    let demeritPoints = 0;

    if (speed < speedLimit)
         {
        console.log("Ok");
    } else {

       ////// Calculate demerit points//////

        demeritPoints = Math.floor((speedLimit) / kmPerDemeritPoint);
        
        //////// Output the total demerit points//////
        
        console.log(`Demerit points: ${demeritPoints}`);
    }
}

//// Example usage////
let inputSpeed = parseInt(prompt("Enter the speed of the car in km/h:"));

//// Validate input////

if (isnumber(inputSpeed)) {
    console.log("Error: Please enter a valid number.");
} else {
    checkSpeed(inputSpeed);
}
